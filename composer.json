{
  "name": "drupal-composer/drupal-project",
  "description": "Project template for Drupal 8 projects with composer",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "",
      "role": ""
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "composer/installers": "^1.2",
    "cweagans/composer-patches": "^1.6",
    "drupal-composer/drupal-scaffold": "^2.2",
    "drupal/admin_toolbar_tools": "^1.23",
    "drupal/bootstrap": "^3.11",
    "drupal/config_filter": "^1.1",
    "drupal/config_ignore": "^2.1",
    "drupal/config_split": "^1.3",
    "drupal/config_suite": "^1.2",
    "drupal/core": "~8.5",
    "drupal/devel": "^1.2",
    "drupal/stage_file_proxy": "^1.0@alpha",
    "drush/drush": "^9.0.0",
    "vlucas/phpdotenv": "^2.4",
    "webflo/drupal-finder": "^1.0.0",
    "webmozart/path-util": "^2.3"
  },
  "require-dev": {
    "beet/box": "^0.8.12",
    "drupal/coder": "^8.2",
    "drupal/console": "^1.8",
    "drupal/drupal-extension": "^3.4",
    "integratedexperts/behat-format-progress-fail": ">=0.2.1",
    "integratedexperts/behat-screenshot": ">=0.6.1",
    "mouf/nodejs-installer": "^1.0",
    "se/selenium-server-standalone": "^3.0",
    "webflo/drupal-core-require-dev": "^8.5"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ],
    "files": [
      "load.environment.php"
    ]
  },
  "scripts": {
    "pre-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
      "cp -pf web/sites/example.settings.local.php web/sites/default/settings.local.php",
      "cp -pf web/sites/development.services.yml web/sites/default/development.services.yml"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "cs": [
      "phpcs --runtime-set installed_paths $(pwd)/vendor/drupal/coder/coder_sniffer --runtime-set eslint_path $(pwd)/node_modules/.bin/eslint --colors -s -p",
      "npm run lint"
    ],
    "build": [
      "drush version",
      "drush sql-drop",
      "gunzip -c data/db.sql.gz | drush sql-cli",
      "drush cr",
      "drush ev '\\Drupal::entityManager()->getStorage(\"shortcut_set\")->load(\"default\")->delete();'",
      "drush cim -y --partial",
      "drush cr",
      "drush updb -y",
      "drush entup -y",
      "drush en devel,config_filter,config_split,stage_file_proxy,config_suite -y"
    ],
    "build-wotby": [
      "drush version",
      "drush cr",
      "drush ev '\\Drupal::entityManager()->getStorage(\"shortcut_set\")->load(\"default\")->delete();'",
      "drush cim -y --partial",
      "drush cr",
      "drush updb -y",
      "drush entup -y",
      "drush en devel,config_filter,config_split,stage_file_proxy,config_suite -y"
    ]
  },
  "extra": {
    "drupal-scaffold": {
      "source": "http://cgit.drupalcode.org/drupal/plain/{path}?h={version}",
      "excludes": [
        "web/sites/development.services.yml",
        "web/sites/default/development.services.yml",
        "web/sites/default/default.settings.local.php",
        "web/sites/default/settings.local.php",
        "web/sites/default/prod.settings.php",
        "web/sites/default/uat.settings.php",
        "web/sites/default/patch.settings.php",
        ".beetbox/tasks/post/solr.yml",
        ".eslintrc.json",
        "web/google123.html",
        "web/robots.txt"
      ],
      "includes": [
        ".editorconfig",
        ".eslintignore",
        ".gitattributes",
        ".htaccess",
        "index.php",
        "robots.txt",
        "update.php"
      ],
      "omit-defaults": true,
      "initial": {
        "sites/default/default.services.yml": "sites/default/services.yml",
        "sites/default/default.settings.php": "sites/default/settings.php"
      }
    },
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
    "beetbox": {
      "beet_domain": "local.d8training",
      "beet_root": "{{ beet_base }}/web",
      "php_version": "7.1",
      "php_mysql_package": "php7.1-mysql",
      "php_packages_state": "latest",
      "php_install_recommends": "yes",
      "php_date_timezone": "Australia/Melbourne",
      "java_packages": [
        "openjdk-8-jdk"
      ],
      "installed_extras_solr": false,
      "solr_version": "4.10.4",
      "solr_install_path": "/opt/solr",
      "solr_host": "0.0.0.0",
      "solr_timezone": "Australia/Melbourne",
      "solr_log_file_path": "/var/log/solr.log",
      "solr_service_name": "solr",
      "solr_service_state": "started",
      "vagrant_memory": "2048",
      "vagrant_cpus": 2,
      "drupal_install_site": true,
      "drupal_account_name": "admin",
      "drupal_account_pass": "admin"
    }
  }
}
