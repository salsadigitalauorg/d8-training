use \Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter().
 */
function d8training_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
  if ($form_id == 'comment_comment_form') {
    $form['actions']['submit']['#value'] = t('Comment now');
  }
}